---
import BaseLayout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article>
    <header>
      <h1>{frontmatter.title}</h1>
      <p class="meta">
        发布于 {frontmatter.pubDate.toLocaleDateString('zh-CN')}
        · 作者：{frontmatter.author}
      </p>
      {
        frontmatter.tags && (
          <div class="tags">
            {frontmatter.tags.map((tag: unknown) => (
              <span class="tag">#{tag}</span>
            ))}
          </div>
        )
      }
    </header>

    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 700px;
  }

  h1 {
    color: #333;
    margin-bottom: 0.5rem;
  }

  .meta {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .tags {
    margin-bottom: 2rem;
  }

  .tag {
    background: #e1f5fe;
    color: #0277bd;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    margin-right: 0.5rem;
  }

  .content {
    line-height: 1.8;
  }
</style>
