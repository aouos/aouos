---
import type { CollectionEntry } from 'astro:content';
import { ChevronRight } from '@lucide/astro';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate } = post.data;
---

<div class="flex flex-col border-2 border-black rounded-lg p-6 h-full">
  <time class="text-sm text-gray-600">
    {pubDate.toLocaleDateString('zh-CN')}
  </time>
  <h2 class="text-2xl font-bold my-2">{title}</h2>
  <p class="text-gray-700 flex-grow">{description}</p>
  <div class="flex justify-end items-center mt-auto pt-4">
    <a
      href={`/blog/${post.slug}`}
      class="x-button x-wrapper px-6 py-3"
    >
      <span>Read More</span>
      <ChevronRight class="h-5 w-5 ml-2" />
    </a>
  </div>
</div>
