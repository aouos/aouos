---
import { Github, Menu, X } from '@lucide/astro';
---

<header class="bg-white border-b-2 fixed top-0 w-full z-50 font-mono">
  <div class="x-container px-4 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl"> AOUOS </a>
      </div>

      <div class="flex items-center">
        <nav class="hidden md:block">
          <div class="flex items-baseline space-x-8">
            <a href="/" class="text-base"> Home </a>
            <a href="/works" class="text-base"> Works </a>
            <a href="/blog" class="text-base"> Blog </a>
            <a href="/about" class="text-base"> About </a>
          </div>
        </nav>

        <div class="hidden md:block ml-8">
          <button type="button" id="github-btn-desktop" class="x-style x-hover">
            <span class="sr-only">GitHub</span>
            <Github class="h-6 w-6" />
          </button>
        </div>

        <div class="ml-4 -mr-2 flex md:hidden">
          <button
            type="button"
            id="mobile-menu-btn"
            class="x-style x-hover x-active"
            aria-controls="mobile-menu"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <Menu class="block h-6 w-6" id="hamburger-icon" />
            <X class="hidden h-6 w-6" id="close-icon" />
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="hidden md:hidden" id="mobile-menu">
    <div class="px-4 py-6 space-y-2 border-t-2">
      <a href="/" class="block text-center text-base py-2"> Home </a>
      <a href="/works" class="block text-center text-base py-2"> Works </a>
      <a href="/blog" class="block text-center text-base py-2"> Blog </a>
      <a href="/about" class="block text-center text-base py-2"> About </a>
      <div class="pt-2">
        <button
          type="button"
          id="github-btn-mobile"
          class="x-style x-hover x-wrapper w-full"
        >
          <Github class="h-5 w-5 mr-2" />
          <span>GitHub</span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');
  const githubBtnDesktop = document.getElementById('github-btn-desktop');
  const githubBtnMobile = document.getElementById('github-btn-mobile');

  const githubUrl = 'https://github.com/aouos';

  const openGithub = () => {
    window.open(githubUrl, '_blank');
  };

  if (mobileMenuBtn && mobileMenu && hamburgerIcon && closeIcon) {
    mobileMenuBtn.addEventListener('click', () => {
      const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
      mobileMenuBtn.setAttribute('aria-expanded', !isExpanded + '');
      mobileMenu.classList.toggle('hidden');
      hamburgerIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    });
  }

  if (githubBtnDesktop) {
    githubBtnDesktop.addEventListener('click', openGithub);
  }

  if (githubBtnMobile) {
    githubBtnMobile.addEventListener('click', openGithub);
  }
</script>
